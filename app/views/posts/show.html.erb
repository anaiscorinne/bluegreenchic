<div class="parallax-container main-header">
  <%= render "layouts/nav" %>
  <div class="parallax hp-motto-image">
      <%= image_tag @post.cover.url %>
      <p class="store-index-motto"><span class="white-text">ethical fashion  sustainable style</span></p>
    </div>
</div>

<div class="container text-in-parallax">
  <div class="row">
    <div class="col s12 m12">
      <h5><%= @post.title %></h5>
      <p><%= @post.created_at.strftime("%d %B %Y") %></p>
      <hr>
      <%= @post.content %>
    </div>
  </div>
</div>

<div class="container">
  <div class="comment-section">
    <h5><%= @post.comments.count %> Comments</h5>
    <%= render @post.comments %>
    <% if current_user %>
    <p>Add a comment:</p>
    <%= render "comments/form" %>
    <% end %>
  </div>
</div>