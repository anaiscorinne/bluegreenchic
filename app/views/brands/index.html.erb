<div class="parallax-container main-header">
  <div class="navbar-fixed main-nav">
    <nav>
      <div class="nav-wrapper">
        <a href="/" class="grey-text text-darken-1 brand-logo"> BGC</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><a href="/#about-us" class="hp-nav-list grey-text text-darken-1">About Us</a></li>
          <li><a href="#" class="hp-nav-list grey-text text-darken-1">The Blog</a></li>
          <li><a href="/brands" class="hp-nav-list grey-text text-darken-1">The Brands</a></li>
          <li><a href="/stores" class="hp-nav-list grey-text text-darken-1">Shop Local</a></li>
          <% if user_signed_in? %>
            <li><a href="/users/sign_out" data-method="DELETE" class="hp-nav-list grey-text text-darken-1">Logout</a></li>
          <% else %>
            <li><a href="/users/sign_up" class="hp-nav-list grey-text text-darken-1">Login</a></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
   <div class="parallax hp-motto-image valign-wrapper">
    <%= image_tag 'brand-page.png' %>
    <p class="brand-motto grey-text text-lighten-4">ethical fashion, sustainable style</p>
  </div>
</div>

<div class="container text-in-parallax value-nav">
  <div class="" id="value-nav">
  <a href="#">
    <h5 class="center hp-h5-title">VALUE KEYS</h5>
  </a>
  </div>
</div>

<% @brands.each do |brand| %>

<!-- THIS IS FOR EVEN ID -->
  <% if brand.id.even? %>
    <div class="text-in-parallax">
      <div class="section ">
        <div class="row ">
          <div class="col s12 m6">
            <%= image_tag brand.image.url, :class => "responsive-img right-align brand-image" %>
          </div>
          <div class="col s12 m6">
            <div class="brand-body">
              <a href=""><i class="blue-text text-darken-4 small mdi mdi-facebook-box"></i></a>
              <a href=""><i class="blue-text text-lighten-1 small mdi mdi-twitter-box"></i></a>
              <a href=""><i class="brown-text text-lighten-1 small mdi mdi-instagram"></i></a>
              <a href="<%= brand.website %>" class="right-align brand-index-title"><%= brand.name %></a>
              <p class="brand-index-page"><%= brand.description %></p>
              <p>Check out <%= brand.name %>'s Instagram: <a href="#"><%= brand.instagram %></a> </p>
              <% if current_user && @user.role == "admin" %>
                <a href="/brands/<%=brand.id%>/edit">Edit | </a><a href="/brands/new">Add New Brand</a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<!-- THIS IS FOR ODD -->
  <% elsif brand.id.odd? %>
    <div class="text-in-parallax">
      <div class="section ">
        <div class="row ">
          <div class="col s12 m6">
            <div class="brand-body">
              <a href="<%= brand.website %>" class="right-align brand-index-title"><%= brand.name %></a>
              <a href=""><i class="blue-text text-darken-4 small mdi mdi-facebook-box"></i></a>
              <a href=""><i class="blue-text text-lighten-1 small mdi mdi-twitter-box"></i></a>
              <a href=""><i class="brown-text text-lighten-1 small mdi mdi-instagram"></i></a>
              <p class="brand-index-page"><%= brand.description %></p>
              <p>Check out <%= brand.name %>'s Instagram: <a href="#"><%= brand.instagram %></a> </p>
              <% if current_user && @user.role == "admin" %>
                <a href="/brands/<%=brand.id%>/edit">Edit | </a>
              <% end %>
              </div>
            </div>
            <div class="col s12 m6">
            <%= image_tag brand.image.url, :class => "responsive-img left-align brand-image" %>
            </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>