<div class="container text-in-parallax">
  <div class="section ">
    <div class="row ">
      <div class="col s12 m12">
            <h5 class="center hp-h5-title">Add a new Brand</h5>
              <%= form_for [@brand], html: { multipart: true } do |f| %>

                <%= f.label :name %>
                <%= f.text_field :name %>
                <br>
                <%= f.label :description %>
                <%= f.text_area :description %>
                <br>
                <%= f.label :website %>
                <%= f.text_field :website %>
                <br>
                <%= f.label :instagram %>
                <%= f.text_field :instagram %>
                <br>
                <%= f.label :twitter %>
                <%= f.text_field :twitter %>
                <br>
                <%= f.label :facebook %>
                <%= f.text_field :facebook %>
                <br>
                <label>Image</label>
                <%= image_tag(@brand.image_url) if @brand.image? %>
                <%= f.file_field :image %>
                <%= f.hidden_field :image_cache %>
                <br>
                <%= f.submit "Save" %>
                <br>
                <%= link_to("Cancel", brands_path) %>
                <br>
                <%= link_to("Home", "/") %>
              <% end %>

        </div>
    </div>
  </div>
</div>


