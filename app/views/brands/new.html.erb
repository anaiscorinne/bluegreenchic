<%= render "layouts/nav" %>

<div class="container">
    <div class="row ">
      <div class="col s12 m12">
            <h5 class="center hp-h5-title">Add a new Brand</h5>
              <%= form_for [@brand], html: { multipart: true } do |f| %>

                <%= f.label :name %>
                <%= f.text_field :name, autofocus: true %>
                <br>
                <%= f.label :description %>
                <%= f.text_area :description %>
                <br>
                <%= f.label :website %>
                <%= f.text_field :website %>
                <br>
                <%= f.label :instagram %>
                <%= f.text_field :instagram %>
                <br>
                <%= f.label :twitter %>
                <%= f.text_field :twitter %>
                <br>
                <%= f.label :facebook %>
                <%= f.text_field :facebook %>
                <br>
                <label>Image</label><br><br>
                <%= image_tag(@brand.image.thumb.url) if @brand.image? %><br>
                <%= f.file_field :image %>
                <%= f.hidden_field :image_cache %>
                <br>
                <% Keyvalue.all.each do |value| %>
                  <%= check_box_tag "brand[keyvalue_ids][]", value.id, @brand.keyvalue_ids.include?(value.id), :id => "value_#{value.id}" %>
                  <%= label_tag :keyvalue_ids, value.name, :for => "value_#{value.id}" %>
                  <br />
                <% end %>                
                <%= f.submit "Save" %>
                <br>
                <%= link_to("Cancel", brands_path) %>
                <br>
                <%= link_to("Home", "/") %>
              <% end %>
        </div>
    </div>
</div>


