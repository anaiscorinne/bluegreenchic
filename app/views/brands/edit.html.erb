<div class="container text-in-parallax">
  <div class="section ">
    <div class="row ">
      <div class="col s12 m12">
            <h5 class="center hp-h5-title">Edit: <%= @brand.name %></h5>
              <%= form_for [@brand], html: { multipart: true } do |f| %>

                <%= f.label :name %>
                <%= f.text_field :name %>
                <br>
                <%= f.label :description %>
                <%= f.text_area :description %>
                <br>
                <%= f.label :website %>
                <%= f.text_field :website %>
                <br>
                <%= f.label :instagram %>
                <%= f.text_field :instagram %>
                <br>
                <p>
                <label>Image</label>
                <%= image_tag(@brand.image_url) if @brand.image? %>
                <%= f.file_field :image %>
                <%= f.hidden_field :image_cache %>
                <br><br><br>
                <%= f.submit "Save Edits", :class => "waves-effect waves-light btn" %>
								<%= link_to "Delete", @brand, :method => "delete", :class => "waves-effect waves-light btn red" %>
                <br>
              <% end %>

        </div>
    </div>
  </div>
</div>
