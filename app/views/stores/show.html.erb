<div class="parallax-container main-header">
  <div class="navbar-fixed main-nav">
    <nav>
      <div class="nav-wrapper">
        <a href="/" class="grey-text text-darken-1 brand-logo"> BGC</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><a href="/#about-us" class="hp-nav-list grey-text text-darken-1">About Us</a></li>
          <li><a href="/blogposts" class="hp-nav-list grey-text text-darken-1">The Blog</a></li>
          <li><a href="/brands" class="hp-nav-list grey-text text-darken-1">The Brands</a></li>
          <li><a href="/stores" class="hp-nav-list grey-text text-darken-1">Shop Local</a></li>
          <% if user_signed_in? %>
            <li><a href="/users/sign_out" data-method="DELETE" class="hp-nav-list grey-text text-darken-1">Logout</a></li>
          <% else %>
            <li><a href="/users/sign_up" class="hp-nav-list grey-text text-darken-1">Login</a></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
   <div class="parallax hp-motto-image">
      <%= image_tag 'reform41.jpeg' %>
    <p class="store-page-motto pink-text text-darken-4"><b>ethical fashion, sustainable style</b></p>
  </div>
</div>

<div class="container text-in-parallax">
  <div class="row">
   <div class="col s12 m4">
    </div>
  </div>
  <div class="row">
    <div class="col s12 m4">
      <%= image_tag @store.image.url, :class => "responsive-img"%>
      <h5 class="the-brands-title left-align grey-text text-lighten-1"><i class="small material-icons">loyalty</i> The Brands </h5>
      <hr>
    </div>
        
    <div class="col s12 m8">
      <a class="modal-trigger instagram-modal-text" href="#igmodal"><i class="brown-text text-lighten-1 small mdi mdi-instagram"></i> <%= @store.name %></a>
      <p class="store-body"><a target="_blank" href="<%= @store.website %>"><%= @store.website %></a></p>
      <p class="store-body"><%= @store.phone %> | <%= @store.address %></p>
      <p class="store-body"><%= @store.description %></p>

      <p>OR GOOGLR MAPS GOES HERE</p>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m12">
      MAP GOES HERE - GoogleMaps API
    </div>
  </div>
        

        <!-- Modal Structure -->
  <div id="igmodal" class="modal bottom-sheet">
    <div class="modal-content">
      <a href="#!" class="modal-action modal-close"><i class="small mdi mdi-chevron-double-down"></i></a>
      <div class="instagram-feed center-align">
        <iframe src="<%= @store.ig_url_one %>" width="250" height="250" frameborder="0" scrolling="no" allowtransparency="true"></iframe>
        <iframe src="<%= @store.ig_url_two %>" width="250" height="250" frameborder="0" scrolling="no" allowtransparency="true"></iframe>
        <iframe src="<%= @store.ig_url_three %>" width="250" height="250" frameborder="0" scrolling="no" allowtransparency="true"></iframe>
        <iframe src="<%= @store.ig_url_four %>" width="250" height="250" frameborder="0" scrolling="no" allowtransparency="true"></iframe>
      </div>
    </div>
    <div class="modal-footer">
      <h5 class="center-align"><a target="_blank" href="<%= @store.ig_url %>">I want more..</a></h5>
    </div>
  </div>
</div>
    

