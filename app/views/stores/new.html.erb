<%= render "layouts/nav" %>

<div class="container">
<div class="row ">
  <div class="col s12 m12">
        <br><h5 class="center hp-h5-title">Add a new Store</h5><hr><br>
              <%= form_for [@store], html: { multipart: true } do |f| %>

                <%= f.label :name %>
                <%= f.text_field :name, autofocus: true %>
                <br>
                <%= f.label :website %>
                <%= f.text_field :website %>
                <br>
                <%= f.label :instagram %>
                <%= f.text_field :instagram %>
                <br>
                <%= f.label :ig_url %>
                <%= f.text_field :ig_url %>
                <br>
                <%= f.label :ig_url_one %>
                <%= f.text_field :ig_url_one %>
                <br>
                <%= f.label :ig_url_two %>
                <%= f.text_field :ig_url_two %>
                <br>
                <%= f.label :ig_url_three %>
                <%= f.text_field :ig_url_three %>
                <br>
                <%= f.label :ig_url_four %>
                <%= f.text_field :ig_url_four %>
                <br>
                <%= f.label :desc_preview %>
                <%= f.text_field :desc_preview %>
                <br>
                <%= f.label :description %>
                <%= f.text_area :description %>
                <br>
                <%= f.label :address %>
                <%= f.text_area :address %>
                <br>
                <%= f.label :phone %>
                <%= f.text_field :phone %>
                <br>
                <% Brand.all.each do |b| %>
                  <%= check_box_tag "store[brand_ids][]", b.id, @store.brand_ids.include?(b.id), :id => "brand_#{b.id}" %>
                  <%= label_tag :brand_ids, b.name, :for => "brand_#{b.id}" %>
                  <br />
                <% end %>              
                <br>
                <label>Image</label>
                <%= image_tag(@store.image_url) if @store.image? %>
                <%= f.file_field :image %>
                <%= f.hidden_field :image_cache %>
                <br>
                <%= f.submit "Save" %>
                <br>
                <%= link_to("Cancel", brands_path) %>
                <br>
                <%= link_to("Home", "/") %>
              <% end %>

        </div>
    </div>
  </div>



