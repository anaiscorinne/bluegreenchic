<%= render "layouts/nav" %>

<div class="container">
<div class="row ">
  <div class="col s12 m12">
        <br><h5 class="center hp-h5-title">Edit <%= @keyvalue %></h5><hr><br>
              <%= form_for [@keyvalue] do |f| %>

                <%= f.label :name %>
                <%= f.text_field :name, autofocus: true %>
                <br>
                <%= f.label :description %>
                <%= f.text_area :description %>
                <br>
                <%= f.label :icon %>
                <%= f.text_field :icon %>
                <br>
                <%= f.submit "Save Edits", :class => "waves-effect waves-light btn" %>
                <%= link_to "Delete", @keyvalue, :method => "delete", :class => "waves-effect waves-light btn red" %>
                <br>
                <% end %>

        </div>
    </div>
  </div>