<%= render "layouts/nav" %>

<div class="container">
    <div class="row ">
      <div class="col s12 m12">
            <h5 class="center hp-h5-title">Add a new Blogpost</h5>
            <%= @post.errors.full_messages %>
              <%= form_for [@post], html: { multipart: true } do |f| %>

                <%= f.label :title %>
                <%= f.text_field :title, autofocus: true %>
                <br>
                <%= f.label :description %>
                <%= f.text_area :description %>
                <br>
                <%= f.label :date %>
                <%= f.date_field :date %>
                <br>
                <%= f.label :content %>
                <%= f.text_area :content %>
                <br><br>
                <label>Image</label><br><br>
                <%= image_tag(@post.image.thumb.url) if @post.image? %><br>
                <%= f.file_field :image %>
                <%= f.hidden_field :image_cache %>
                <br><br>            
                <%= f.submit "Save" %>
                <br>
                <%= link_to("Cancel", blogposts_path) %>
                <br>
                <%= link_to("Home", "/") %>
              <% end %>
        </div>
    </div>
</div>