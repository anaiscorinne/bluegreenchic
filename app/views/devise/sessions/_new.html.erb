
      <div class="col s12 m4">

      <h5 class="center login-form-title">Log In</h5>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field sign-in-form">
            <%= f.label :email, :class => "form-label teal-text text-lighten-1" %><br />
            <%= f.email_field :email %>
          </div>
          
          <div class="field">
            <%= f.label :password, :class => "form-label teal-text text-lighten-1" %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field sign-form-submit left">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, :class => "log-in-remember" %>
            </div>
          <% end -%>
          
          <div class="actions sign-form-submit right">
            <%= f.submit "Log in", :class => "log-in-button btn waves-effect waves-light" %>
          </div>
          <div class="left">
           <%= link_to "Forget your password?", new_password_path(resource_name), :class => "red-text forgot-password" %>
          </div>
      
          <% end %>
    
     </div>
